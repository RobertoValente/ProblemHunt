<% if(cookies.contactStatus === 'success') { %>
    <%- include('toast', {color: 'border-success', msg: lng.msgSuccessContact}); %>
<% } else if(cookies.contactStatus === 'error') { %>
    <%- include('toast', {color: 'border-error', msg: lng.msgErrorContact}); %>
<% } %>

<% if(cookies.createProblemStatus === 'success') { %>
    <%- include('toast', {color: 'border-success', msg: lng.msgSuccessCreate}); %>
<% } else if(cookies.createProblemStatus === 'exceedLimitSize') { %>
    <%- include('toast', {color: 'border-error', msg: lng.msgExceedLimit}); %>
<% } else if(cookies.createProblemStatus === 'error') { %>
    <%- include('toast', {color: 'border-error', msg: lng.msgErrorCreate}); %>
<% } %>

<% if(cookies.replyStatus === 'success') { %>
    <%- include('toast', {color: 'border-success', msg: lng.msgSuccessReply}); %>
<% } else if(cookies.replyStatus === 'error') { %>
    <%- include('toast', {color: 'border-error', msg: lng.msgErrorReply}); %>
<% } %>